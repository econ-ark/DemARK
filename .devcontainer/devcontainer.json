{
  "name": "DemARK Development Environment",
  
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-vscode.vscode-github-issue-notebooks"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/micromamba/envs/DemARK/bin/python",
        "python.terminal.activateEnvironment": false,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "jupyter.kernels.filter": [
          {
            "path": "/home/vscode/micromamba/envs/DemARK/bin/python",
            "type": "pythonEnvironment"
          }
        ],
        "jupyter.defaultKernel": "Python 3 (ipykernel)",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        }
      }
    }
  },

  "forwardPorts": [8888, 8889, 8890],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8889": {
      "label": "Jupyter Lab (Alt)",
      "onAutoForward": "silent"
    },
    "8890": {
      "label": "HARK Testing",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "remoteUser": "vscode",
  "containerUser": "vscode",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "containerEnv": {
    "SHELL": "/bin/bash",
    "TERM": "xterm-256color"
  },

  "initializeCommand": "echo 'Initializing DemARK development container...'",
  
  "onCreateCommand": "echo 'Container created successfully'",
  "updateContentCommand": "echo 'Content updated'",
  
  "runArgs": [
    "--init",
    "--privileged"
  ],

  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace"
}
